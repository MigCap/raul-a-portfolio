{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/pages": ["src/pages/*"],
      "@/components": ["src/components/*"],
      "@/layouts": ["src/layouts/*"],
      "@/icons": ["src/components/common/icons/*"],
      "@/assets": ["public/assets/*"],
      "@/i18n": ["src/i18n/*"],
      "@/sanity": ["src/sanity/*"],
      "@/styles": ["src/styles/*"],
      "@/schema": ["../cms-sanity/sanity-schema.ts"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    // "plugins": [
    //   {
    //     "name": "@astrojs/ts-plugin"
    //   }
    // ],
    "verbatimModuleSyntax": true
  },
  "extends": "astro/tsconfigs/strict",
  // "include": [".astro/types.d.ts", "**/*", ".prettierrc.cjs"],
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["node_modules", "dist", ".vercel"]
}
